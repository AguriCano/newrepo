<h1><%- title %></h1>

<% if (typeof messages === "function") { %><%- messages() %><% } %>

<div class="vehicle-info">
    <h2><%= inventory.inv_year %> <%= inventory.inv_make %> <%= inventory.inv_model %></h2>
    
    <p><strong>Average Rating:</strong> <%= rating.average_rating %> / 5.0 (<%= rating.review_count %> reviews)</p>

    <% if (loggedin) { %>
        <% if (!hasReviewed) { %>
            <p><a href="/inv/add-review/<%= inventory.inv_id %>" style="background: #007bff; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none; display: inline-block;">Write a Review</a></p>
        <% } else { %>
            <p style="background: #fff3cd; padding: 10px; border-radius: 5px;">You have already reviewed this vehicle.</p>
        <% } %>
    <% } else { %>
        <p style="background: #fff3cd; padding: 10px; border-radius: 5px;"><a href="/account/login">Log in</a> to write a review.</p>
    <% } %>
</div>

<div class="reviews-container">
    <h3>Customer Reviews</h3>
    
    <% if (reviews && reviews.length > 0) { %>
        <%- reviews %>
    <% } else { %>
        <p>No reviews yet. Be the first to review this vehicle!</p>
    <% } %>
</div>

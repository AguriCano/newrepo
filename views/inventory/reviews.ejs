<h1><%- title %></h1>

<% if (typeof messages === "function") { %><%- messages() %><% } %>

<div class="vehicle-info">
    <h2><%= inventory.inv_year %> <%= inventory.inv_make %> <%= inventory.inv_model %></h2>
    
    <div class="rating-summary">
        <div class="average-rating">
            <span class="rating-stars">
                <% 
                    const fullStars = Math.floor(rating.average_rating);
                    const hasHalfStar = (rating.average_rating % 1) >= 0.5;
                    for (let i = 0; i < 5; i++) {
                        if (i < fullStars) {
                            out += '★';
                        } else if (i === fullStars && hasHalfStar) {
                            out += '✩';
                        } else {
                            out += '☆';
                        }
                    }
                %>
                <%= rating.average_rating %> of 5 (<%=rating.review_count %> review<%= rating.review_count !== 1 ? 's' : '' %>)
            </span>
        </div>
    </div>

    <% if (loggedin) { %>
        <% if (!hasReviewed) { %>
            <a href="/inv/add-review/<%= inventory.inv_id %>" class="btn">Write a Review</a>
        <% } else { %>
            <p class="notice">You have already reviewed this vehicle.</p>
        <% } %>
    <% } else { %>
        <p class="notice"><a href="/account/login">Log in</a> to write a review.</p>
    <% } %>
</div>

<div class="reviews-container">
    <h3>Customer Reviews</h3>
    
    <% if (reviews) { %>
        <div class="reviews-list">
            <%- reviews %>
        </div>
    <% } else { %>
        <p>No reviews yet. Be the first to review this vehicle!</p>
    <% } %>
</div>

<style>
    .vehicle-info {
        background: #f5f5f5;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 30px;
    }

    .rating-summary {
        margin: 20px 0;
    }

    .rating-stars {
        font-size: 18px;
        color: #ffc107;
    }

    .reviews-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .review-item {
        background: white;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
    }

    .review-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .review-author {
        font-weight: bold;
    }

    .review-rating {
        color: #ffc107;
        font-size: 14px;
    }

    .review-date {
        color: #666;
        font-size: 12px;
    }

    .review-title {
        font-weight: bold;
        margin: 10px 0;
        font-size: 16px;
    }

    .review-body {
        color: #333;
        line-height: 1.6;
        margin: 10px 0;
    }

    .review-actions {
        margin-top: 10px;
        display: flex;
        gap: 10px;
    }

    .review-actions a,
    .review-actions button {
        padding: 5px 10px;
        font-size: 12px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        text-decoration: none;
    }

    .review-actions button {
        background: #dc3545;
    }

    .btn {
        background: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin: 10px 0;
    }

    .notice {
        background: #fff3cd;
        border: 1px solid #ffc107;
        padding: 10px;
        border-radius: 5px;
        margin: 10px 0;
    }
</style>
